@model CartViewModel

@{
    ViewData["Title"] = "Cart";
}


@if (Model.CartItems.Count > 0)
{
    <h1>Carrito</h1>

    <div class="cartWrapper">
        <div class="cartbg d-none">
            <h3 class="text-center">Redireccionando a Paypal...</h3>

            <img src="~/images/cargar.gif" />
        </div>

        <table class="table">

            <tr>
                <th>Producto</th>
                <th>Cantidad</th>
                <th></th>
                <th>Precio</th>
                <th>Total</th>
            </tr>
            @foreach (var item in Model.CartItems)
            {
                <tr>
                    <td>@item.ProductName</td>
                    <td>@item.Quantity</td>
                    <td>
                        <a asp-action="Add" asp-route-id="@item.ProductId" class="btn btn-sm btn-dark">+</a>
                        <a asp-action="Decrease" asp-route-id="@item.ProductId" class="btn btn-sm btn-secondary">-</a>
                        <a asp-action="Remove" asp-route-id="@item.ProductId" class="btn btn-sm btn-danger">Quitar</a>
                    </td>
                    <td>@item.Price.ToString("C2")</td>
                    <td>@Model.CartItems.Where(x => x.ProductId == item.ProductId).Sum(x => x.Quantity * x.Price).ToString("C2")</td>
                </tr>
            }
            <tr>
                <td class="text-right" colspan="4">Grand Total: @Model.GrandTotal.ToString("C2")</td>
            </tr>
            <tr>
                <td class="text-right" colspan="4">
                    <a asp-action="Clear" class="btn btn-danger">Limpiar carrito</a>
                    <a href="#" class="btn btn-dark checkout">Checkout</a>
                </td>
            </tr>

        </table>
    </div>
}
else
{
    <h3 class="display-4 text-center">Tu carrito esta vacio</h3>
}

<partial name="~/Views/Cart/_PaypalPartial.cshtml" for="CartItems" />

@section Scripts {

    <script>
    $(function () {

        $("a.checkout").click(function (e) {
            e.preventDefault();

            $("div.cartbg").removeClass("d-none");

            $.get("/cart/clear", {}, function () {
                $("form.paypalform").submit();
            });

        });

    });
    </script>
}