@model SmallCartViewModel

@if (Model != null)
{
    <p>Productos en el carrito: <span class="badge badge-secondary">@Model.NumberOfItems</span> </p>
    <p>Total: <b>@Model.TotalAmount.ToString("C2")</b></p>
    <a class="btn btn-light mb-2"asp-controller="Cart" asp-action="Index">Ver Carrito</a>
    <br />
    <a class="btn btn-danger" asp-controller="Cart" asp-action="Clear">Limpiar Carrito</a>
}
else
{
    <p class="lead m-0">Tu carrito esta vacio</p>
}


